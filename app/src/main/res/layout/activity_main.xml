<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context="win.nicecode.azurefile.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="BIN QUEUE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBinQueueCount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="0"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ALGORITHM QUEUE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAlgorithmQueueCount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="0"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DBPOST QUEUE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDBPostQueueCount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="0"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CARRIER FOLDER"
                android:textSize="12sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="IN" />

                <TextView
                    android:id="@+id/carrierInCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="OUT" />

                <TextView
                    android:id="@+id/carrierOutCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="ERROR" />

                <TextView
                    android:id="@+id/carrierErrorCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DISPATCHER FOLDER"
                android:textSize="12sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="IN" />

                <TextView
                    android:id="@+id/dispatcherInCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="OUT" />

                <TextView
                    android:id="@+id/dispatcherOutCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="ERROR" />

                <TextView
                    android:id="@+id/dispatcherErrorCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DBPOST FOLDER"
                android:textSize="12sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="IN" />

                <TextView
                    android:id="@+id/dbpostInCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="OUT" />

                <TextView
                    android:id="@+id/dbpostOutCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="ERROR" />

                <TextView
                    android:id="@+id/dbpostErrorCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/lastCheckTime"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Refresh" />
    </RelativeLayout>
</LinearLayout>